{
    "display": "form",
    "components": [
        {
            "label": "back",
            "tableView": false,
            "key": "pv.goBack",
            "type": "hidden",
            "input": true
        },
        {
            "label": "aanvrager",
            "tableView": false,
            "key": "aanvrager",
            "type": "hidden",
            "input": true
        },
        {
            "label": "partner",
            "tableView": false,
            "key": "partner",
            "type": "hidden",
            "input": true
        },
        {
            "label": "kinderen",
            "tableView": false,
            "key": "kinderen",
            "type": "hidden",
            "input": true
        },
        {
            "content": "<dl class=\"row mb-0\">\n <dd class=\"col-4\">Klant</dd>\n <dt class=\"col-4\">{{ (data.aanvrager?.volledigeNaam || '-') }} </dt>\n    </dl>\n   <dl class=\"row mb-0\">\n <dd class=\"col-4\">Telefoonnummer</dd>\n <dt class=\"col-4\">{{ (data.aanvrager?.telefoonnummer || '-') }} </dt>\n</dl>\n",
            "tableView": true,
            "key": "klant",
            "type": "htmlelement",
            "input": true
        },
        {
            "content": "<strong>Eindconclusie</strong>",
            "tableView": true,
            "key": "eindconclusie",
            "type": "htmlelement",
            "input": false,
            "label": "HTML"
        },
        {
            "label": "Conclusie o.b.v. inkomen",
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Inkomen boven norm",
                    "value": true,
                    "shortcut": ""
                },
                {
                    "label": "Inkomen onder norm",
                    "value": false,
                    "shortcut": ""
                }
            ],
            "key": "beoordelingEnAfhandeling.inkomenNorm.isInkomenBovenNorm",
            "disabled": true,
            "type": "radio",
            "input": true
        },
        {
            "label": "Conclusie o.b.v. vermogen",
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Vermogen boven norm",
                    "value": true,
                    "shortcut": ""
                },
                {
                    "label": "Vermogen onder norm",
                    "value": false,
                    "shortcut": ""
                }
            ],
            "key": "beoordelingEnAfhandeling.vermogenNorm.isVermogenBovenNorm",
            "disabled": true,
            "type": "radio",
            "input": true
        },
        {
            "label": "Besluit",
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Aanvraag toekennen",
                    "value": "Aanvraag toekennen",
                    "shortcut": ""
                },
                {
                    "label": "Aanvraag afwijzen",
                    "value": "Aanvraag afwijzen",
                    "shortcut": ""
                },
                {
                    "label": "Aanvraag buiten behandeling stellen",
                    "value": "Aanvraag buiten behandeling stellen",
                    "shortcut": ""
                }
            ],
            "key": "beoordelingEnAfhandeling.besluit.eindconclusie",
            "type": "radio",
            "validate": {
                "required": true
            },
            "input": true
        },
        {
            "label": "Selecteer de reden voor afwijzing",
            "widget": "choicesjs",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Klant heeft niet alle gevraagde gegevens gestuurd",
                        "value": "onvoldoendeInformatie",
                        "shortcut": ""
                    },
                    {
                        "label": "Het inkomen van de klant is hoger is dan de norm voor de Stadspas",
                        "value": "inkomenTeHoog",
                        "shortcut": ""
                    },
                    {
                        "label": "Klant is student aan het HBO of de universiteit",
                        "value": "klantIsStudent",
                        "shortcut": ""
                    },
                    {
                        "label": "Het vermogen van de klant hoger is dan de norm voor de Stadspas",
                        "value": "vermogenTeHoog",
                        "shortcut": ""
                    }
                ]
            },
            "key": "beoordelingEnAfhandeling.besluit.redenAfwijzing",
            "type": "select",
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.besluit.eindconclusie",
                "eq": "Aanvraag afwijzen"
            },
            "validate": {
                "required": true
            },
            "input": true
        },
        {
            "label": "Toelichting besluit",
            "tableView": true,
            "key": "beoordelingEnAfhandeling.besluit.toelichting",
            "showCharCount": true,
            "validate": {
                "customMessage": "Maximum aantal characters bereikt (140)",
                "maxLength": 140
            },
            "type": "textarea",
            "input": true
        },
        {
            "label": "Besluit besproken met klant?",
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Ja",
                    "value": true,
                    "shortcut": ""
                },
                {
                    "label": "Nee",
                    "value": false,
                    "shortcut": ""
                }
            ],
            "key": "beoordelingEnAfhandeling.besluit.besprokenMetKlant",
            "type": "radio",
            "validate": {
                "required": true
            },
            "input": true
        },
        {
            "label": "Toelichting na contact met klant",
            "tableView": true,
            "key": "beoordelingEnAfhandeling.besluit.toelichtingNaContactMetKlant",
            "type": "textarea",
            "showCharCount": true,
            "validate": {
                "customMessage": "Maximum aantal characters bereikt (140)",
                "maxLength": 140
            },
            "input": true
        },
        {
            "label": "Hoe wil de klant geÃ¯nformeerd worden over dit besluit?",
            "optionsLabelPosition": "right",
            "multiple": false,
            "tableView": false,
            "data": {
                "values": [
                    {
                        "label": "Portaal",
                        "value": "Portaal",
                        "shortcut": ""
                    },
                    {
                        "label": "Post",
                        "value": "Post",
                        "shortcut": ""
                    }
                ]
            },
            "key": "communicatievoorkeur",
            "type": "select",
            "customDefaultValue": "value = 'Portaal';",
            "input": true
        },
        {
            "label": "Personen Stadspas Aangevraagd",
            "tableView": true,
            "key": "personenStadspasAangevraagd",
            "type": "hidden",
            "calculateValue": "var personenArray = Array.of(data.aanvrager?.volledigeNaam || '', data.partner?.volledigeNaam || ''); data.kinderen?.forEach(kind => { personenArray.push(kind.volledigeNaam);}); value = personenArray;",
            "input": false
        },
        {
            "label": "Selecteer hieronder de persoon/personen aan wie een Stadspas is toegekend.",
            "widget": "choicesjs",
            "tableView": true,
            "multiple": true,
            "dataSrc": "custom",
            "data": {
                "custom": "values = data.personenStadspasAangevraagd"
            },
            "dataType": "auto",
            "template": "<span>{{ item }}</span>",
            "key": "beoordelingEnAfhandeling.besluit.stadspasToegekendePersonen",
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.besluit.eindconclusie",
                "eq": "Aanvraag toekennen"
            },
            "type": "select",
            "input": true
        },
        {
            "label": "Stadspas voor het jaartal",
            "hideInputLabels": true,
            "inputsLabelPosition": "top",
            "useLocaleSettings": false,
            "tableView": false,
            "fields": {
                "day": {
                    "hide": true
                },
                "month": {
                    "hide": true
                },
                "year": {
                    "hide": false
                }
            },
            "key": "beoordelingEnAfhandeling.besluit.stadspasJaartal",
            "type": "day",
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.besluit.eindconclusie",
                "eq": "Aanvraag toekennen"
            },
            "input": true,
            "validate": {
                "required": true
            },
            "calculateValue": "value = moment().format('yyyy');",
            "allowCalculateOverride": true
        },
        {
            "label": "Dagtekening beschikkingsbrief",
            "format": "dd-MM-yyyy",
            "defaultDate": "moment()",
            "tableView": false,
            "datePicker": {
                "disableWeekends": false,
                "disableWeekdays": false
            },
            "enableTime": false,
            "enableMinDateInput": false,
            "enableMaxDateInput": false,
            "key": "beoordelingEnAfhandeling.besluit.dagtekeningBeschikkingsbrief",
            "type": "datetime",
            "input": true,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "en",
                "useLocaleSettings": false,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy",
                "hourIncrement": 1,
                "minuteIncrement": 1,
                "time_24hr": false,
                "minDate": null,
                "disableWeekends": false,
                "disableWeekdays": false,
                "maxDate": null
            },
            "validate": {
                "required": true
            }
        },
        {
            "label": "datumAanvraagToekenning",
            "format": "dd-MM-yyyy",
            "defaultDate": "moment()",
            "customClass": "d-none",
            "tableView": false,
            "datePicker": {
                "disableWeekends": false,
                "disableWeekdays": false
            },
            "enableTime": false,
            "enableMinDateInput": false,
            "enableMaxDateInput": false,
            "key": "beoordelingEnAfhandeling.besluit.datumAanvraagToekenning",
            "type": "datetime",
            "input": true,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "en",
                "useLocaleSettings": false,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy",
                "hourIncrement": 1,
                "minuteIncrement": 1,
                "time_24hr": false,
                "minDate": null,
                "disableWeekends": false,
                "disableWeekdays": false,
                "maxDate": null
            },
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.besluit.eindconclusie",
                "eq": "Aanvraag toekennen"
            }
        },
        {
            "label": "Columns",
            "columns": [
                {
                    "components": [
                        {
                            "type": "button",
                            "label": "Terug",
                            "showValidations": false,
                            "disableOnInvalid": true,
                            "tableView": false,
                            "action": "custom",
                            "custom": "data.pv.goBack = 'true'; form.submit(); component.disabled = true;",
                            "key": "back",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                },
                {
                    "components": [
                        {
                            "type": "button",
                            "label": "Volgende",
                            "showValidations": false,
                            "disableOnInvalid": true,
                            "tableView": false,
                            "action": "custom",
                            "custom": "data.pv.goBack = 'false'; form.submit(); component.disabled = true;",
                            "key": "submit",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                }
            ],
            "key": "columns",
            "type": "columns",
            "input": false,
            "tableView": false
        }
    ]
}
