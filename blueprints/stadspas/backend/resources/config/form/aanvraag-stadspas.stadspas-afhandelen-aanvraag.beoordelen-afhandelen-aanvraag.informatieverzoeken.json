{
    "display": "form",
    "components": [
        {
            "label": "back",
            "tableView": false,
            "key": "pv.goBack",
            "type": "hidden",
            "input": true
        },
        {
            "label": "Aanvrager",
            "tableView": false,
            "key": "aanvrager",
            "type": "hidden",
            "input": true
        },
        {
            "content": "<dl class=\"row mb-0\">\n <dd class=\"col-4\">Klant</dd>\n <dt class=\"col-4\">{{ (data.aanvrager?.volledigeNaam || '-') }} </dt>\n    </dl>\n   <dl class=\"row mb-0\">\n <dd class=\"col-4\">Telefoonnummer</dd>\n <dt class=\"col-4\">{{ (data.aanvrager?.telefoonnummer || '-') }} </dt>\n</dl>\n",
            "tableView": true,
            "key": "klant",
            "type": "htmlelement",
            "input": true
        },
        {
            "label": "Informatie opvragen bij klant?",
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Ja",
                    "value": true,
                    "shortcut": ""
                },
                {
                    "label": "Nee",
                    "value": false,
                    "shortcut": ""
                }
            ],
            "validate": {
                "required": true
            },
            "key": "beoordelingEnAfhandeling.informatieOpvragenBijKlant",
            "type": "radio",
            "input": true
        },
        {
            "label": "Op te vragen benodigde informatie",
            "optionsLabelPosition": "right",
            "tableView": false,
            "values": [
                {
                    "label": "Alle bankafschriften betaal- en spaarrekeningen afgelopen maand",
                    "value": "bankafschriftenAfgelopenMaand",
                    "shortcut": ""
                },
                {
                    "label": "Bankafschriften van bankrekeningnummer(s) afgelopen maand",
                    "value": "specifiekeBankafschriftenAfgelopenMaand",
                    "shortcut": ""
                },
                {
                    "label": "Bankafschriften van bankrekeningnummer(s) voor een specifiek periode",
                    "value": "specifiekeBankafschriftenPerPeriode",
                    "shortcut": ""
                },
                {
                    "label": "Laatste loonstrook en/of uitkeringsspecificatie(s)",
                    "value": "laatsteInkomstenSpecificatie",
                    "shortcut": ""
                },
                {
                    "label": "Laatste loonstrook en/of uitkeringsspecificatie partner",
                    "value": "laatsteInkomstenSpecificatiePartner",
                    "shortcut": ""
                },
                {
                    "label": "Specificatie pensioen",
                    "value": "specificatiePensioen",
                    "shortcut": ""
                },
                {
                    "label": "ID bewijs partner",
                    "value": "partnerID",
                    "shortcut": ""
                },
                {
                    "label": "Bewijs van inschrijving opleiding",
                    "value": "bewijsVanInschrijving",
                    "shortcut": ""
                },
                {
                    "label": "Uw jaarrekening en/of uw balansrekening",
                    "value": "jaarBalansRekening",
                    "shortcut": ""
                },
                {
                    "label": "Belastingaangifte en/of aanslag afgelopen jaar",
                    "value": "belastingAangifteAanslag",
                    "shortcut": ""
                }
            ],
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "opTeVragenBenodigdeInformatie",
            "type": "selectboxes",
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.informatieOpvragenBijKlant",
                "eq": true
            },
            "input": true,
            "inputType": "checkbox"
        },
        {
            "label": "Voer hier de IBAN nummers in",
            "autoExpand": true,
            "tableView": true,
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "specifiekeBankrekeningNummers",
            "type": "textarea",
            "conditional": {
                "show": true,
                "when": "opTeVragenBenodigdeInformatie.specifiekeBankafschriftenAfgelopenMaand",
                "eq": true
            },
            "input": true
        },
        {
            "label": "Voer hier de IBAN nummers en de bijbehorende periode in",
            "autoExpand": true,
            "tableView": true,
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "bankrekeningNummersSpecifiekePeriode",
            "type": "textarea",
            "conditional": {
                "show": true,
                "when": "opTeVragenBenodigdeInformatie.specifiekeBankafschriftenPerPeriode",
                "eq": true
            },
            "input": true
        },
        {
            "label": "Voer hier de naam van de opleiding in",
            "tableView": true,
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "opleiding",
            "type": "textfield",
            "conditional": {
                "show": true,
                "when": "opTeVragenBenodigdeInformatie.bewijsVanInschrijving",
                "eq": true
            },
            "input": true
        },
        {
            "label": "Wat is de deadline voor dit informatieverzoek?",
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "deadline",
            "format": "dd-MM-yyyy",
            "tableView": false,
            "enableTime": false,
            "defaultDate": "moment().add(3, 'weeks')",
            "validate": {
                "required": true
            },
            "datePicker": {
                "disableWeekends": false,
                "disableWeekdays": false
            },
            "enableMinDateInput": false,
            "enableMaxDateInput": false,
            "type": "datetime",
            "input": true,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "useLocaleSettings": false,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy",
                "hourIncrement": 1,
                "minuteIncrement": 1,
                "time_24hr": false,
                "minDate": null,
                "disableWeekends": false,
                "disableWeekdays": false,
                "maxDate": null
            },
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.informatieOpvragenBijKlant",
                "eq": true
            },
            "calculateValue": "value = data.deadline ?  moment(data.deadline).endOf('day') : '';"
        },
        {
            "label": " Geldt er een hersteltermijn voor dit informatieverzoek?",
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Ja",
                    "value": true,
                    "shortcut": ""
                },
                {
                    "label": "Nee",
                    "value": false,
                    "shortcut": ""
                }
            ],
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "hersteltermijn",
            "type": "radio",
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.informatieOpvragenBijKlant",
                "eq": true
            },
            "validate": {
                "required": true
            },
            "input": true
        },
        {
            "label": "Hoe wil de klant ge√Ønformeerd worden over dit informatieverzoek?",
            "optionsLabelPosition": "right",
            "multiple": true,
            "tableView": false,
            "data": {
                "values": [
                    {
                        "label": "Portaal",
                        "value": "Portaal",
                        "shortcut": ""
                    },
                    {
                        "label": "E-mail",
                        "value": "E-mail",
                        "shortcut": ""
                    },
                    {
                        "label": "Post",
                        "value": "Post",
                        "shortcut": ""
                    }
                ]
            },
            "key": "communicatievoorkeuren",
            "type": "select",
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.informatieOpvragenBijKlant",
                "eq": true
            },
            "input": true
        },
        {
            "label": "Toelichting informatieverzoek (Let op! De hieronder opgenomen tekst wordt in de brief naar de klant opgenomen)",
            "autoExpand": true,
            "tableView": true,
            "showCharCount": true,
            "validate": {
                "customMessage": "Maximum aantal characters bereikt (140)",
                "maxLength": 140
            },
            "properties": {
                "container": "/beoordelingEnAfhandeling/informatieverzoeken/-/"
            },
            "key": "toelichting",
            "type": "textarea",
            "input": true,
            "conditional": {
                "show": true,
                "when": "beoordelingEnAfhandeling.informatieOpvragenBijKlant",
                "eq": true
            }
        },
        {
            "label": "Columns",
            "columns": [
                {
                    "components": [
                        {
                            "type": "button",
                            "label": "Terug",
                            "showValidations": false,
                            "disableOnInvalid": true,
                            "tableView": false,
                            "action": "custom",
                            "custom": "data.pv.goBack = 'true'; form.submit(); component.disabled = true;",
                            "key": "back",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                },
                {
                    "components": [
                        {
                            "type": "button",
                            "label": "Volgende",
                            "showValidations": false,
                            "disableOnInvalid": true,
                            "tableView": false,
                            "action": "custom",
                            "custom": "data.pv.goBack = 'false'; form.submit(); component.disabled = true;",
                            "key": "submit",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                }
            ],
            "key": "columns",
            "type": "columns",
            "input": false,
            "tableView": false
        }
    ]
}